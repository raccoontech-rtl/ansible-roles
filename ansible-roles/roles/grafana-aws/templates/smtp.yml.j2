# Grafana SMTP 알림 설정
# 이 파일은 이메일 알림을 위한 SMTP 구성을 포함합니다

apiVersion: 1

notifiers:
  - name: Company SMTP
    type: email
    uid: company_smtp
    org_id: 1
    is_default: true
    send_reminder: true
    frequency: 1m
    disable_resolve_message: false
    settings:
      addresses: "devops-team@company.com,alerts@company.com"
      singleEmail: true
    secureSettings:
      password: "{{ smtp_password }}"  
    jsonData:
      host: "{{ smtp_host }}:{{ smtp_port }}"
      user: "{{ smtp_user }}"
      fromAddress: "{{ smtp_from_address }}"
      fromName: "Grafana Alerts"
      startTLS: true
      clientCertFile: ""
      clientKeyFile: ""
      skipVerify: false
      ehloIdentity: "{{ grafana_domain }}"
    editable: true
    version: 1
